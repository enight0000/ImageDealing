<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kexincom.cbpm.WebPageActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/relativeLayout"
        android:background="@android:color/black"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">

        <ImageButton
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:id="@+id/webpage_back"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="新闻"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20dp"
            android:layout_alignTop="@+id/webpage_back"
            android:layout_toRightOf="@+id/webpage_back"
            android:layout_toLeftOf="@+id/DealList_btn2"
            android:layout_toStartOf="@+id/DealList_btn2"
            android:id="@+id/webpage_title" />

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/DealList_btn2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#00ffffff" />

    </RelativeLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webView"
        android:layout_gravity="center_vertical" />
</LinearLayout>
