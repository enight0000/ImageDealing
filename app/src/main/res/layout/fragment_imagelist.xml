<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kexincom.cbpm.fragment.ImageListFragment">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:id="@+id/relativeLayout4"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:background="@android:color/black" >

        <ImageButton
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:id="@+id/fragement_imagelist_btn1"
            android:background="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="相册"
            android:id="@+id/fragment_imageconfirm_textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="22dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="#00000000" />

        <ImageButton
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:id="@+id/fragement_imagelist_btn3"
            android:background="@drawable/album"
            android:focusableInTouchMode="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        android:gravity="center_vertical|center_horizontal"
        android:background="@android:color/black">

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/fragement_imagelist_btn2"
            android:src="@drawable/camera"
            android:background="@android:color/black" />

    </LinearLayout>

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragement_imagelist_gridview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:numColumns="4"
        android:choiceMode="none"
        android:layout_below="@+id/relativeLayout4"
        android:layout_above="@+id/linearLayout" />

</RelativeLayout>
